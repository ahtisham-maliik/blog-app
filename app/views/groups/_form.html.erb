<% if @group.errors.any? %>
  <h2>The following errors prevented the group from saving:</h2>
  <ul>
    <% @group.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @group do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <%= f.submit "Create/Edit", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back', groups_path %>
