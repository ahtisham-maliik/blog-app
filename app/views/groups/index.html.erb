<h1>Groups</h1>
<%= link_to "+ Create a new group ", new_group_path, class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">User</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <th scope="row"><%= group.id %></th>
        <td><%= link_to group.name, group_path(group.id) %></td>
        <td><%= group.users.first.email %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to "Delete", group_path(group), data: { turbo_method: :delete , turbo_confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

